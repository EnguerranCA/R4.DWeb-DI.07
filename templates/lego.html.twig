{% extends "base.html.twig" %}

{% block body %}

        <nav>
            <a href="{{ path('lego_store_login') }}">Login</a>
            <a href="/">Home</a> |  
            {% for category in categories %}
              {% if not (category.id == 4 and not is_granted('IS_AUTHENTICATED_FULLY')) %}
                <a href="/{{ category.id }}">{{ category.name }}</a>{% if not loop.last %} | {% endif %}
              {% endif %}
            {% endfor %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <p >Bonjour {{ email }}</p>
            {% endif %}

            {# <a href="{{ path('lego_store_logout') }}">Logout</a> #}
      </nav>  
<div class="lego_card">
      <div class="info_section">
        <div class="lego_header">
          <img class="locandina" src="/images/{{lego.boxImage}}"/>
          <h1>{{lego.name}}</h1>
          <h4>Collection : {{lego.collection}}</h4>
          <span class="pieces">Pièces : {{lego.pieces}}</span>
          <p class="price">{{lego.price}}€</p><br>
          <a href="index.php?buy={{lego.id}}"><button>Buy</button></a>
        </div>  
        <div class="lego_desc">
          <p class="text">
            {{lego.description}}
        </p>
        </div>
        <div class="lego_social">
          <ul>
            <li><i class="material-icons">share</i></li>
            <li><i class="material-icons"></i></li>
            <li><i class="material-icons">chat_bubble</i></li>
          </ul>

        </div>

      </div>
      <div class="blur_back">
        <img src="/images/{{lego.legoImage}}" alt="background lego card">
      </div>
</div>
{% endblock %}