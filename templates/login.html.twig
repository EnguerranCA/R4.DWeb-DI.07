{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="login-form">
        <h1>Veuillez vous authentifier</h1>

        <label for="username">Email :</label>
        <input type="email" name="_username" id="username" autocomplete="email" value="{{ last_username }}" required autofocus>
        <label for="password">Mot de passe :</label>

        <input type="password" name="_password" id="password" autocomplete="current-password" required>

        {% if error %}
          <div class="error-message">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}
        <button class="button btn-submit" type="submit">Connexion</button>
    </form>

    
{% endblock %}